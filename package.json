{
  "name": "markmurray.co",
  "private": false,
  "version": "1.0.0",
  "description": "Mark Murray portfolio",
  "author": "Mark Murray <mark.murray.ie@gmail.com>",
  "license": "MIT",
  "keywords": [
    "mark murray"
  ],
  "dependencies": {
    "analytics.js": "^2.9.1",
    "classnames": "^2.2.5",
    "firebase": "^3.4.0",
    "firebase-tools": "^3.3.0",
    "prop-types": "^15.6.2",
    "re-base": "^2.2.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.3.11",
    "react-markdown": "^4.0.3",
    "react-metrics": "^2.4.1",
    "react-redux": "^4.4.5",
    "react-router-dom": "^4.3.1",
    "redux-firebasev3": "^0.1.6",
    "styled-components": "^4.0.2",
    "tinycolor2": "^1.4.1"
  },
  "scripts": {
    "start": "NODE_ENV=development node webpackDevServer --hot",
    "build": "NODE_ENV=production webpack",
    "deploy": "npm run build && firebase deploy",
    "analyze": "webpack --config webpack.config.prod.js --json | webpack-bundle-size-analyzer",
    "lint-staged": "lint-staged"
  },
  "main": "app.js",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.23.1",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "json-loader": "^0.5.4",
    "lint-staged": "^8.0.0",
    "moment": "^2.15.1",
    "pre-commit": "^1.2.2",
    "precss": "^1.4.0",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "react-addons-test-utils": "^15.0.1",
    "style-loader": "^0.13.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "xo": "^0.23.0"
  },
  "repository": "https://github.com/markmur/markmurray.co.git",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "rules": {
      "camelcase": 0,
      "unicorn/filename-case": 0
    },
    "extends": "xo-react",
    "plugins": [
      "react"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add",
      "xo"
    ]
  },
  "precommit": {
    "run": [
      "lint-staged"
    ]
  }
}
