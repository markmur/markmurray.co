{
  "name": "markmurray.co",
  "author": "Mark Murray <mark.murray.ie@gmail.com>",
  "license": "MIT",
  "private": false,
  "version": "1.0.0",
  "description": "Mark Murray's portfolio",
  "repository": "https://github.com/markmur/markmurray.co.git",
  "keywords": [
    "mark murray",
    "portfolio",
    "react",
    "webpack",
    "firebase"
  ],
  "browserslist": [
    "> 1%",
    "IE 10"
  ],
  "main": "app.js",
  "scripts": {
    "analyze": "NODE_ENV=production webpack --config webpack.config.js --json | webpack-bundle-size-analyzer",
    "build": "NODE_ENV=production webpack",
    "deploy": "yarn build && firebase deploy",
    "lint-staged": "lint-staged",
    "lint": "xo",
    "start": "NODE_ENV=development webpack-dev-server"
  },
  "dependencies": {
    "@firebase/app-types": "^0.3.2",
    "analytics.js": "^2.9.1",
    "classnames": "^2.2.6",
    "firebase": "^5.1.0",
    "firebase-tools": "^3.19.0",
    "grid-styled": "^4.2.0",
    "polished": "^1.9.2",
    "prettier": "^1.13.6",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-markdown": "^3.3.4",
    "react-metrics": "^2.4.1",
    "react-redux": "^5.0.7",
    "react-redux-firebase": "^2.1.5",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "styled-components": "^3.3.3",
    "styled-system": "^2.3.2",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.4",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^5.0.0",
    "eslint-config-xo": "^0.23.0",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.10.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "json-loader": "^0.5.7",
    "precss": "^3.1.2",
    "prop-types": "^15.6.2",
    "react-hot-loader": "^4.3.3",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "xo": "^0.21.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add",
      "xo",
      "jest"
    ]
  },
  "precommit": {
    "run": [
      "lint-staged"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "xo-react"
    ],
    "envs": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "plugins": [
      "react"
    ],
    "rules": {
      "unicorn/filename-case": 0,
      "camelcase": [
        2,
        {
          "properties": "never"
        }
      ]
    }
  }
}
